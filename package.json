{
  "name": "vscode-antigravity-hud",
  "displayName": "Antigravity HUD",
  "description": "Lightweight monitoring for Google Antigravity AI IDE model usage quota",
  "version": "0.1.1",
  "publisher": "smallyu",
  "icon": "images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/smallyunet/vscode-antigravity-hud"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "antigravity-hud.showQuota",
        "title": "Antigravity HUD: Show Quota"
      },
      {
        "command": "antigravity-hud.refresh",
        "title": "Antigravity HUD: Refresh"
      },
      {
        "command": "antigravity-hud.selectModel",
        "title": "Antigravity HUD: Select Model"
      }
    ],
    "configuration": {
      "title": "Antigravity HUD",
      "properties": {
        "antigravity-hud.pollingInterval": {
          "type": "number",
          "default": 60,
          "minimum": 10,
          "description": "Polling interval in seconds"
        },
        "antigravity-hud.processPatterns": {
          "type": "array",
          "default": [
            "antigravity",
            "gemini-ls",
            "gemini-code"
          ],
          "description": "Process name patterns to search for"
        },
        "antigravity-hud.apiPath": {
          "type": "string",
          "default": "/exa.language_server_pb.LanguageServerService/GetUserStatus",
          "description": "API path for quota information"
        },
        "antigravity-hud.lowQuotaThreshold": {
          "type": "number",
          "default": 20,
          "minimum": 0,
          "maximum": 100,
          "description": "Percentage threshold for low quota warnings"
        },
        "antigravity-hud.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Enable low quota notifications"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "mocha -r ts-node/register src/test/**/*.test.ts"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "chai": "^6.2.2",
    "eslint": "^8.55.0",
    "mocha": "^11.7.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}